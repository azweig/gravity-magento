<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- Logger Configuration -->
    <type name="Quickcomm\Gravity\Logger\Handler\System">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>    
    <type name="Quickcomm\Gravity\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">quickcomm_gravity</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Quickcomm\Gravity\Logger\Handler\System</item>
            </argument>
        </arguments>
    </type>

    <!-- Plugin Configuration for AppendReservationsInterface -->
    <type name="Magento\InventoryReservationsApi\Model\AppendReservationsInterface">
        <!-- Mantén el plugin original -->
        <plugin name="send_webhook_items_in_stock" type="Quickcomm\Gravity\Plugin\StockPlugin"/>
        <!-- Si es necesario, puedes añadir una versión adicional para múltiples tiendas -->
        <plugin name="send_webhook_items_in_stock_custom" type="Quickcomm\Gravity\Plugin\StockPluginCustom"/>
    </type>

</config>
