<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <gravity>
            <general>
                <enabled>0</enabled>
                <debug>0</debug>
            </general>
        </gravity>
        
        <!-- Payment Method Configuration -->
        <payment>
            <pgravity>
                <active>1</active>
                <model>Gravity\Model\Payment\PGravity</model>
                <title>Cash Payment (Gravity)</title>
                <allowspecific>0</allowspecific>
                <group>offline</group>
                <can_use_checkout>0</can_use_checkout>
                <can_use_internal>1</can_use_internal>
                <is_gateway>0</is_gateway>
                <sort_order>100</sort_order>
            </pgravity>
        </payment>
        
        <!-- Shipping Method Configuration -->
        <carriers>
            <lgravity>
                <active>1</active>
                <model>Gravity\Model\Carrier\LGravity</model>
                <title>Store Pickup (Gravity)</title>
                <name>Store Pickup</name>
                <price>0.00</price>
                <specificerrmsg>This shipping method is not available. Please select another shipping method.</specificerrmsg>
                <sallowspecific>0</sallowspecific>
                <sort_order>100</sort_order>
                <showmethod>0</showmethod>
            </lgravity>
        </carriers>
    </default>
</config>

